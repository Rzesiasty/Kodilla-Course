SELECT IL.NAME, I.SUMMARY, I.DESCRIPTION
FROM ISSUESLIST IL JOIN ISSUES I ON IL.ID = I.ISSUESLIST_ID
ORDER BY IL.NAME;

SELECT I.SUMMARY, I.DESCRIPTION, U.FIRSTNAME, U.LASTNAME
FROM ISSUES I JOIN USERS U ON I.USER_ID_ASSIGNEDTO = U.ID
ORDER BY U.LASTNAME;

SELECT U.FIRSTNAME, U.LASTNAME, COUNT(*) AS TASK_NUMBER
FROM ISSUES I JOIN USERS U ON I.USER_ID_ASIGNEDTO = U.ID
GROUP BY USER_ID_ASSIGNEDTO
ORDER BY U.LASTNAME;
